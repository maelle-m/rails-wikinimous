<div class="container mt-5">
<head>
  <div class="d-flex justify-content-between">
  <h1>article list</h1>
  <h1><%= link_to "New article", new_article_path, class: "btn btn-outline-dark" %></h1>
 </div>
<head>

<body>
  <div class="container mt-5">
  <ul class="list-group">
     <% @articles.each do |article| %>
      <li class="list-group-item d-flex justify-content-between">
          <%= article.title %>
          <span>
          <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-info btn-sm me-2' %>
          <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </span>
      </li>
    <% end %>
  </ul>
</div>
</body>
